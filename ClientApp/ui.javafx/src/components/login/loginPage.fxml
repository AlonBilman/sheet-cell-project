<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="components.login.LoginController"
            stylesheets="@loginStyle.css" prefWidth="400" prefHeight="300">

    <!-- Title -->
    <Text fx:id="titleText" text="Sheet Cell" layoutX="110" layoutY="60" styleClass="title-text" />

    <!-- Username Field with Dummy Text -->
    <TextField fx:id="usernameField" text="Please enter your name" layoutX="100" layoutY="110"
               prefWidth="200" styleClass="input-field" />

    <!-- Login Button -->
    <Button fx:id="loginButton" text="Login" layoutX="150" layoutY="170" prefWidth="100"
            onAction="#onLoginButtonClick" styleClass="login-button"/>

    <!-- Circular Spinner (Initially Hidden) -->
    <ProgressIndicator fx:id="spinner" layoutX="175" layoutY="215" visible="false" />

</AnchorPane>
