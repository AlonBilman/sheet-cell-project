<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="220.0" prefWidth="745.0" stylesheets="@chatCss.css"
            xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="components.chatarea.ChatController">
    <children>
        <Pane layoutX="5.0" layoutY="10.0" prefHeight="204.0" prefWidth="725.0" styleClass="pane">
            <children>
                <TextArea fx:id="chatData" editable="false" layoutX="1.0" layoutY="-3.0" prefHeight="161.0"
                          prefWidth="724.0" styleClass="text-area"/>
                <TextField fx:id="messageInputField" layoutX="8.0" layoutY="163.0" prefHeight="32.0" prefWidth="637.0"
                           promptText="Type your message..." styleClass="text-field"/>
                <Button fx:id="sendLineChatButton" layoutX="648.0" layoutY="161.0"
                        onAction="#sendLineChatButtonListener" prefHeight="36.0" prefWidth="71.0" styleClass="button"
                        text="Send"/>
            </children>
        </Pane>
    </children>
</AnchorPane>
