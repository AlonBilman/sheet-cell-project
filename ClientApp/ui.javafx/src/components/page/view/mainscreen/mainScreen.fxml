<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<ScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="true" maxHeight="924.0" maxWidth="972.0" minHeight="400.0" minWidth="972.0" prefHeight="703.0" prefWidth="972.0" stylesheets="@mainScreenDefault.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="components.page.view.mainscreen.MainScreenController">
    <content>
        <AnchorPane fx:id="anchorPane" layoutX="-1.0" layoutY="-1.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="642.0" minWidth="885.0" prefHeight="866.0" prefWidth="970.0">
            <children>
                <TableView fx:id="SheetTable" layoutX="6.0" layoutY="68.0" prefHeight="170.0" prefWidth="720.0" styleClass="table-view">
                    <columns>
                        <TableColumn fx:id="userUploadedColumn" prefWidth="75.0" text="User uploaded" />
                        <TableColumn fx:id="sheetNameColumn" prefWidth="75.0" text="Sheet name" />
                        <TableColumn fx:id="sheetSizeColumn" prefWidth="75.0" text="Sheet size" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>

                <TableView fx:id="SheetPermissionTable" editable="true" layoutX="5.0" layoutY="253.0" prefHeight="170.0" prefWidth="720.0" styleClass="table-view">
                    <columns>
                        <TableColumn fx:id="userNameColumn" prefWidth="75.0" text="Sheet user" />
                        <TableColumn fx:id="permissionNameColumn" prefWidth="75.0" text="User permission" />
                        <TableColumn fx:id="permissionApprovedColumn" prefWidth="75.0" text="Permission status" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>

                <Button fx:id="LoadSheetButton" layoutX="29.0" layoutY="16.0" mnemonicParsing="false" onAction="#LoadFileListener" prefHeight="25.0" prefWidth="150.0" text="Load Sheet File" />
                <Button fx:id="ViewSheetButton" layoutX="738.0" layoutY="102.0" mnemonicParsing="false" onAction="#ViewSheetListener" prefHeight="25.0" prefWidth="150.0" text="View Sheet" />
                <Button fx:id="RequestPermissionButton" layoutX="738.0" layoutY="140.0" mnemonicParsing="false" onAction="#RequestPermissionListener" prefHeight="25.0" prefWidth="150.0" text="Request Permission" />
                <Button fx:id="AcceptPermissionButton" layoutX="738.0" layoutY="291.0" mnemonicParsing="false" onAction="#AcceptPermissionListener" prefHeight="25.0" prefWidth="150.0" text="Accept Permission" />
                <Button fx:id="DenyPermissionButton" layoutX="738.0" layoutY="330.0" mnemonicParsing="false" onAction="#DenyPermissionListener" prefHeight="25.0" prefWidth="150.0" text="Deny Permission" />

                <SubScene fx:id="permissionSubScene" height="120.0" layoutX="450.0" layoutY="350.0" visible="false" width="350.0">
                    <root>
                        <VBox spacing="5">
                            <Label text="User request detected" />
                            <Label text="Request logged on :" />
                            <Label text="user" />
                            <Label text="on sheet:" />
                            <Label fx:id="sheetNames" text="sheetName" />
                        </VBox>
                    </root>
                </SubScene>

                <HBox layoutX="244.0" layoutY="16.0" prefHeight="45.0" prefWidth="397.0">
                    <children>
                        <Label prefHeight="27.0" prefWidth="208.0" styleClass="header-label" text="Sheet Cell - Logged as :" underline="true">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                        <Label fx:id="userNameText" prefHeight="27.0" prefWidth="187.0" styleClass="header-label" underline="true">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>

                <ChoiceBox fx:id="styleChoiceBox" layoutX="738.0" layoutY="16.0" prefWidth="150.0" />

                <TabPane layoutX="-1.0" layoutY="447.0" prefHeight="249.0" prefWidth="729.0" tabClosingPolicy="UNAVAILABLE">
                    <tabs>
                        <Tab text="Permission History - Descending order table by time">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="384.0" prefWidth="728.0">
                                    <children>
                                        <TableView fx:id="historyTable" disable="true" layoutX="3.0" layoutY="12.0" prefHeight="159.0" prefWidth="724.0" styleClass="table-view">
                                            <columns>
                                                <TableColumn fx:id="HistoryUserNameColumn" prefWidth="75.0" text="Sheet user" />
                                                <TableColumn fx:id="HistoryPermissionNameColumn" prefWidth="75.0" text="User permission" />
                                                <TableColumn fx:id="HistoryPermissionApprovedColumn" prefWidth="75.0" text="Permission status" />
                                            </columns>
                                            <columnResizePolicy>
                                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                            </columnResizePolicy>
                                        </TableView>
                                    </children>
                                </AnchorPane>
                            </content>
                        </Tab>
                        <Tab text="Online Chat">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="220.0" prefWidth="745.0">
                                    <children>
                                        <Pane layoutX="5.0" layoutY="10.0" prefHeight="200.0" prefWidth="718.0">
                                            <children>
                                    <TextField fx:id="chatData" layoutX="1.0" prefHeight="158.0" prefWidth="720.0" />
                                                 <TextField fx:id="messageInputField" layoutX="8.0" layoutY="163.0" prefHeight="25.0" prefWidth="618.0" promptText="Type your message..." />
                                                 <Button fx:id="sendLineChatButton" layoutX="630.0" layoutY="160.0" onAction="#handleSendMessage" prefHeight="31.0" prefWidth="82.0" text="Send" />
                                            </children>
                                        </Pane>
                                    </children>
                                </AnchorPane>
                            </content>
                        </Tab>
                    </tabs>
                </TabPane>
            </children>
        </AnchorPane>
    </content>
</ScrollPane>
