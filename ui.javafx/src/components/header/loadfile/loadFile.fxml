<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<HBox prefHeight="57.0" spacing="15.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="components.header.loadfile.LoadFileController">
   <children>
      <Button id="LoadNewFileButton" fx:id="loadFileButton" accessibleRoleDescription="LoadFileButton" alignment="CENTER" mnemonicParsing="false" onAction="#loadFileListener" text="Load New File" underline="true">
         <HBox.margin>
            <Insets left="5.0" top="5.0" />
         </HBox.margin>
         <font>
            <Font size="17.0" />
         </font>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </Button>
      <TextArea id="LoadNewFileTextBox" fx:id="filePathText" disable="true" editable="false" maxHeight="-Infinity" prefHeight="30.0" prefWidth="390.0" promptText="Loaded file path will show here" style="-fx-border-color: blue;">
         <font>
            <Font size="15.0" />
         </font>
      </TextArea>
   </children>
   <padding>
      <Insets top="10.0" />
   </padding>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
</HBox>
