<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="401.0" prefWidth="225.0" stylesheets="@tableFunctionality.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="components.body.table.func.TableFunctionalityController">
   <content>
      <VBox alignment="TOP_CENTER" minHeight="550.0" minWidth="106.0">
         <children>
            <VBox alignment="CENTER" spacing="15.0" VBox.vgrow="SOMETIMES">
               <children>
                  <Button id="ColSetButton" fx:id="setColButton" disable="true" mnemonicParsing="false" onAction="#setColActionListener" prefHeight="45.0" prefWidth="180.0" text="Set Col Number" underline="true" />
                  <Button id="RowSetButton" fx:id="setRowButton" disable="true" mnemonicParsing="false" onAction="#setRowActionListener" prefHeight="45.0" prefWidth="180.0"  text="Set Row Number" underline="true">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Button>
                  <Button fx:id="alignmentSetButton" disable="true" mnemonicParsing="false" onAction="#alignmentSetListener" prefHeight="45.0" prefWidth="180.0"  text="Alignment Set" underline="true" />
                  <Button fx:id="cellTextPick" disable="true" mnemonicParsing="false" onAction="#cellTextColorPick" prefHeight="45.0" prefWidth="179.0"  text="Cell text color" underline="true" />
                  <Button fx:id="cellBackgroundPick" disable="true" mnemonicParsing="false" onAction="#cellBackgroundColorPick" text="Cell background color" />
                  <Button fx:id="resetButton" disable="true" mnemonicParsing="false" onAction="#resetCellStyleListener" prefHeight="45.0" prefWidth="180.0" text="Reset Style" textAlignment="CENTER" underline="true" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </VBox>
            <VBox alignment="CENTER" prefHeight="82.0" prefWidth="143.0" spacing="15.0" VBox.vgrow="SOMETIMES">
               <children>
                  <Button fx:id="addNewRangeButton" alignment="CENTER" disable="true" mnemonicParsing="false" prefHeight="45.0" prefWidth="180.0"  text="Add Range Set">
                     <VBox.margin>
                        <Insets top="15.0" />
                     </VBox.margin>
                  </Button>
                  <Button fx:id="deleteExistingRangeButton" alignment="CENTER" disable="true" mnemonicParsing="false" prefHeight="45.0" prefWidth="180.0" text="Delete Range" />
                  <Button fx:id="viewExistingRangeButton" alignment="CENTER" disable="true" mnemonicParsing="false" prefHeight="45.0" prefWidth="180.0" text="View Range" />
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </VBox>
         </children>
      </VBox>
   </content>
</ScrollPane>
